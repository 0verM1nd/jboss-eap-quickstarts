# ----------------------------------------------------------------------
# Seam Sidekick Startup script
#
# Required ENV vars:
# ------------------
#   JAVA_HOME - location of a JDK home directory
#
# Optional Environment Variables
# ------------------
#   SIDEKICK_HOME - location of sidekick2's installed home dir
#   SIDEKICK_OPTS - parameters passed to the Java VM when running sidekick
# -----------------------------------------------------------------------

QUOTED_ARGS=""
while [ "$1" != "" ] ; do

  QUOTED_ARGS="$QUOTED_ARGS \"$1\""
  shift

done

if [ -f /etc/sidekickrc ] ; then
  . /etc/sidekickrc
fi

if [ -f "$HOME/.sidekickrc" ] ; then
  . "$HOME/.sidekickrc"
fi

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
mingw=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true;;
  Darwin*) darwin=true 
           if [ -z "$JAVA_VERSION" ] ; then
             JAVA_VERSION="CurrentJDK"
           else
             echo "Using Java version: $JAVA_VERSION"
           fi
           if [ -z "$JAVA_HOME" ] ; then
             JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/${JAVA_VERSION}/Home
           fi
           ;;
esac

if [ -z "$JAVA_HOME" ] ; then
  if [ -r /etc/gentoo-release ] ; then
    JAVA_HOME=`java-config --jre-home`
  fi
fi

if [ -z "$SIDEKICK_HOME" ] ; then
  ## resolve links - $0 may be a link to sidekick's home
  PRG="$0"

  # need this for relative symlinks
  while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
    else
      PRG="`dirname "$PRG"`/$link"
    fi
  done

  saveddir=`pwd`

  SIDEKICK_HOME=`dirname "$PRG"`/..

  # make it fully qualified
  SIDEKICK_HOME=`cd "$SIDEKICK_HOME" && pwd`

  cd "$saveddir"
  echo Using Sidekick at $SIDEKICK_HOME
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
  [ -n "$SIDEKICK_HOME" ] &&
    SIDEKICK_HOME=`cygpath --unix "$SIDEKICK_HOME"`
  [ -n "$JAVA_HOME" ] &&
    JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$CLASSPATH" ] &&
    CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# For Migwn, ensure paths are in UNIX format before anything is touched
if $mingw ; then
  [ -n "$SIDEKICK_HOME" ] &&
    SIDEKICK_HOME="`(cd "$SIDEKICK_HOME"; pwd)`"
  [ -n "$JAVA_HOME" ] &&
    JAVA_HOME="`(cd "$JAVA_HOME"; pwd)`"
  # TODO classpath?
fi

if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      # IBM's JDK on AIX uses strange locations for the executables
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD="`which java`"
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly."
  echo "  We cannot execute $JAVACMD"
  exit 1
fi

if [ -z "$JAVA_HOME" ] ; then
  echo "Warning: JAVA_HOME environment variable is not set."
fi

SIDEKICK_MAIN_CLASS=org.jboss.seam.sidekick.shell.Main

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  [ -n "$SIDEKICK_HOME" ] &&
    SIDEKICK_HOME=`cygpath --path --windows "$SIDEKICK_HOME"`
  [ -n "$JAVA_HOME" ] &&
    JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  [ -n "$HOME" ] &&
    HOME=`cygpath --path --windows "$HOME"`
fi

sidekick_exec_cmd="\"$JAVACMD\" \
  $SIDEKICK_OPTS \
  -classpath \"${SIDEKICK_HOME}/lib/*\" \
  \"-Dsidekick.home=${SIDEKICK_HOME}\"  \
  ${SIDEKICK_MAIN_CLASS}"

echo $sidekick_exec_cmd

eval $sidekick_exec_cmd "$QUOTED_ARGS"
